<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net6.0;net7.0;net8</TargetFrameworks>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <LangVersion>preview</LangVersion>

        <Version>0.10.1</Version>

        <PackageProjectUrl>https://github.com/egorozh/Tabalonia</PackageProjectUrl>
        <RepositoryUrl>https://github.com/egorozh/Tabalonia</RepositoryUrl>
        <PackageTags>Tab Control, Draggable, Avalonia, AvaloniaUI</PackageTags>
        <Description>Tab Control with draggable tabs for Avalonia</Description>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Avalonia" Version="11.0.0" />
    </ItemGroup>
    
</Project>